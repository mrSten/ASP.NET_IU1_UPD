@{ Layout = "_NavCoordinatorLayout";
}

@model IFakeDataRepository
    
<h2>Ärenden</h2>
<p class="info">Du är inloggad som samordnare</p>

<table id="managerForm">
    <tr>
        <td class="label">Välj status:</td>
        <td class="label">Välj avdelning:</td>
        <td>&nbsp;</td>
        <td class="label">Ärendenummer:</td>
        <td>&nbsp;</td>
    </tr>
    <tr>
        <td>
            <select name="status">
                <option selected="selected">Välj alla</option>
                @foreach (Status statuses in Model.Statuses)
                {
                    <option>@statuses.StatusName</option>
                }
            </select>
        </td>
        <td>
            <select name="department">
                <option selected="selected">Välj alla</option>
                @foreach (Department departments in Model.Departments) {
                <option>@departments.DepartmentName</option>
                }
            </select>
        </td>
        <td><input class="button" type="submit" value="Hämta lista" /></td>
        <td><input name="casenumber" /></td>
        <td><input class="button" type="submit" value="Sök" /></td>
    </tr>
</table>

<!--Nedan ser man en lista på ärenden-->
<table>
    <tr>
        <th>Ärende anmält</th>
        <th>Ärendenummer</th>
        <th>Miljöbrott</th>
        <th>Status</th>
        <th>Avdelning</th>
        <th>Handläggare</th>
    </tr>
    @foreach (Case cases in Model.Cases)
    {
        <tr>
            <td>@cases.DateOfObservation.ToString("d")</td>
            <td><a asp-controller="Coordinator" asp-action="CrimeCoordinator" asp-route-id="@cases.RefNumber">@cases.RefNumber</a></td>
            <td>@cases.TypeOfCrime</td>
            <td>@cases.Status</td>
            <td>@cases.Department</td>
            <td>@cases.Employee</td>
        </tr>
    }
</table>