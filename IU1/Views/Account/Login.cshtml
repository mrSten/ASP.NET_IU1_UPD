@{
}

@model LoginModel
<section id="mainColumn">
    <h2>Inloggning för Småstads personal</h2>
    <p class="info">En säker tjänst från Småstads IT-avdelning</p>
    
    <div asp-validation-summary="All"></div>
    <form method="post" asp-controller="Account" asp-action="Login">
        <p>
            <input type="hidden" name="isSubmitted" value="true" />
        </p>
        <p>
            <label asp-for="Name">Användarnamn</label>
            <input asp-for="Name"/>
            <span asp-validation-for="Name"></span>
        </p>
        <input type="hidden" asp-for="ReturUrl" />
        <p>
            <label asp-for="Password">Lösenord</label>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </p>
        <p>
            <input class="button" type="submit" value="Logga in" />
        </p>
    </form>
</section><!-- End Left -->