@{ Layout = "_NavInlogManagerLayout";
}
@model Employee

<h2>Detaljer för ärende: @ViewBag.TId</h2>
<p class="info">Du är inloggad som avdelningschef: @ViewBag.User</p>

@await Component.InvokeAsync("ShowOneCrime", ViewBag.TId)

<section id="bottomColumn">
    <h3>Redigera ärende</h3>
    Ange handläggare:
    <form asp-route-id="@ViewBag.TId" asp-controller="Manager" asp-action="UpdateEmployee" method="post">
        <select asp-for="EmployeeName" asp-items="@(new SelectList(ViewBag.ListOfEmployees,"", "EmployeeName"))">
            <option selected="selected">Välj</option>
        </select>
        <p><input class="button" type="submit" value="Spara" /></p>
    </form>
    <form asp-route-id="@ViewBag.TId" asp-controller="Manager" asp-action="UpdateInfo">
        <input type="checkbox" name="noAction" value="true" /> Ingen åtgärd: <input type="text" name="info" value="Ange motivering" />
        <p><input class="button" type="submit" value="Spara" /></p>
    </form>
    
</section>